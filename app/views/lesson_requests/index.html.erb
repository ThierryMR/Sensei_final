<div class="container">
  <% if params[:format] == "sensei" %>
  <h1 class="text-center">Minhas aulas - Sensei <strong><%= current_user.sensei.user.username %></strong></h1>
  <% else %>
  <h1 class="text-center">Minhas aulas - Estudante</h1>
  <% end %>


  <ul class="list-group">
    <% @lesson_requests.each do |lesson| %>
    <div class="container requests-index">
      <div class="row">
          <div class="col-xs-6">
          <%= link_to lesson do %>
          <h2><strong>Aula #<%= lesson.id %></strong></h2>
          <% end %>
          <h3><strong>Aluno: </strong><%= lesson.user.username %></h3>
          <h3><strong>Matéria: </strong><%= lesson.subject.title %></h3>
          <h3><strong>Descrição: </strong><%= lesson.description %></h3>
          </div>
          <div class="col-xs-6">
          <h3><strong>Duração: </strong><%= lesson.duration %> minutos</h3>
          <h3><strong>Valor total: </strong><%= number_to_currency(lesson.amount) %></h3>
          <h3><strong>Status: </strong><%= lesson.status %></h3>
          <% if lesson.rating.present? %>
            <h3><strong>Avaliação do Sensei: </strong>
            <% lesson.rating.times do %>
              <%= icon("fa", "star") %>
            <% end %></h3>
          <% end %>
          <% if lesson.rating_student.present? %>
            <h3><strong>Avaliação do Estudante: </strong>
            <% lesson.rating_student.times do %>
              <%= icon("fa", "star") %>
            <% end %></h3>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </ul>
</div>
