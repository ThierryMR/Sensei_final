<div class="container">
  <div class="text-center">
    <h1>Materias</h1>
  </div>

  <ul class="list-group">
    <% @sensei_subjects.each do |sensei_subject| %>
      <div class="container">
        <li class="list-group-item">
          Matéria: <%= sensei_subject.subject.title %>
          Preço: <%= sensei_subject.price_per_hour %>
          <br>
        </li>
      </div>
    <% end %>
  </ul>
  <br>
  <br>
  <div class="container">
    <%= form_for [@sensei, @sensei_subject], :html => {:class => "form-horizontal center"} do |f| %>
      <%= f.collection_select :subject_id, Subject.all, :id, :title %>
      <%= f.number_field :price_per_hour %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
